<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title>Document</title>
</head>
<body>
    <h1 style="text-align:center;">Book details</h1>
<table border="2px" class="table table-active table-bordered border-primary">

    <thead>

        <th>BOOK ID</th>
        <th>BOOK TITLE</th>
        <th>BOOK DESCRIPTION</th>
        <th>BOOK PUBLISHED</th>
        <th>AUTHOR ID</th>
    </thead>
    <% for(let i of books){%>
        <tr>

            <td><%=i.booksId%></td>
            <td><%=i.bookTitle%></td>
            <td><%=i.bookDescription%></td>
            <td><%=i.publishedDate%></td>
            <td><%=i.aid%></td>
            <td><a href="/display/books/<%=i.booksId%>" class="btn btn-primary">VIEW</a></td>
            <td><a href="/update/books/<%=i.booksId%>" class="btn  btn-secondary">UPDATE</a></td>
            <td><a href="/delete/books/<%=i.booksId%>" class="btn btn-danger">DELETE</a></td>
        </tr>
   <% }%>
   <a href="/delete/books" class="btn btn-warning">Delete All</a>
    
</table>

</body>
</html>